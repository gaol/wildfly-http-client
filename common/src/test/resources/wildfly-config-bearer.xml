<configuration >
    <authentication-client xmlns="urn:elytron:1.0">
        <authentication-rules>
            <rule use-configuration="jwt-token"/>
        </authentication-rules>
        <authentication-configurations>
            <configuration name="jwt-token">
                <credentials>
                    <oauth2-bearer-token token-endpoint-uri="http://localhost:7788/jwt-token">
                        <resource-owner-credentials name="jdoe" password="dont_tell_me"/>
                        <client-credentials client-id="elytron-client" client-secret="dont_tell_me"/>
                    </oauth2-bearer-token>
                </credentials>
            </configuration>
        </authentication-configurations>
    </authentication-client>
</configuration>
